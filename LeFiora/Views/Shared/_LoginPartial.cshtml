@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="font-size:20px;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">
                    <i class="bi bi-box-arrow-in-left" style="font-size:30px;"></i>
            </button>
        </form>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark">
            <i class="bi bi-cart-fill" style="font-size:30px;"></i>
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-fill-up" style="font-size:30px;"></i>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right" style="font-size:30px;"></i>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark">
                <i class="bi bi-cart-fill" style="font-size:30px;"></i>
        </a>
    </li>
    }

