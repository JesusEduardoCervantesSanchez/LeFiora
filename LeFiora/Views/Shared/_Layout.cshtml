<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeFiora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeFiora.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Belgrano&display=swap" rel="stylesheet">
    <style>
        /* CSS para ocultar la flecha del dropdown */
        .dropdown-toggle::after {
            display: none;
        }

        .btn:focus, .btn:focus-visible {
            outline: none;
            box-shadow: none;
        }
    </style>
</head>
<body class="belgrano-regular">
    <header class="fixed-top bg-transparent">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent mb-3">
            <div class="container-fluid align-baseline align-items-center">
                <div class="d-flex justify-content-center">
                    <div class=" d-flex flex-column align-items-baseline justify-content-start">
                        <div style="height:90px; padding-left:60px;">
                            <a class="navbar-brand p-0 m-0" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:5em; font-style:inherit;">
                                le fiora.
                            </a>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex align-content-between m-0 p-0" style="font-size:20px; ">
                            <div class="dropdown">
                                <a class="btn bg-transparent dropdown-toggle text-dark" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-list" style="font-size:30px;"></i>
                                </a>
                                <ul class="dropdown-menu b-0 m-0" style="border:none !important;">
                                    <li><button class="dropdown-item" type="button">Action</button></li>
                                    <li><button class="dropdown-item" type="button">Another action</button></li>
                                    <li><button class="dropdown-item" type="button">Something else here</button></li>
                                </ul>
                            </div>
                            <ul class="navbar-nav flex-grow-1 justify-content-between">
                                <li class="nav-item">
                                    <a class="nav-link text-dark p-0" style="padding-right:8px !important; " asp-area="" asp-controller="Home" asp-action="Index">Ramos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark py-0" asp-area="" asp-controller="Home" asp-action="Privacy">Cajas</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle py-0 text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Contenido
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown" style="border:none !important;">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Categoria" asp-action="Index">Categorias</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Catalago" asp-action="Index">Catalagos</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Promocion" asp-action="Index">Promociones</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Producto" asp-action="Index">Productos</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="nav-item" style="display:flex; align-items:start; justify-content:initial; height:auto;">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            <partial name="_Notificaciones"/>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="/js/TextColor.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
